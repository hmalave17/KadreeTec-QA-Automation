{
  "name": "saucedemo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test:gherkin": "cucumber-js --require-module ts-node/register --require 'src/steps/**/*.ts' --require 'src/support/**/*.ts' --format progress",
    "test:gherkin:pretty": "cucumber-js --require-module ts-node/register --require 'src/steps/**/*.ts' --require 'src/support/**/*.ts' --format @cucumber/pretty-formatter",
    "test": "cucumber-js --require-module ts-node/register --require src/steps/**/*.ts --require src/support/**/*.ts",
    "test:browser": "BROWSER=chromium npm run test",
    "allure:report": "allure generate reports/allure-results --clean && allure open",
    "allure:clean": "rimraf reports/allure-results reports/allure-report || true",
    "playwright:install-browsers": "npx playwright install"
  },
  "keywords": [],
  "author": "",
