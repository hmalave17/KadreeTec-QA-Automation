  "dependencies": {
    "playwright": "^1.56.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@types/chai": "^5.2.3",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.34.1",
    "allure-js-commons": "^3.4.2",
    "chai": "^6.2.1",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
